<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:theme="@style/Theme.Design.NoActionBar"
    app:layout_constraintVertical_chainStyle="packed">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_sample"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Ranking Sample"
        android:textAllCaps="true"
        android:textColor="@color/primaryGray"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_sample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_sample"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sample_button_main"
        android:text="START"
        android:textAlignment="center"
        android:textColor="@color/colorMoreItems"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_sample"
        app:layout_constraintStart_toStartOf="@+id/text_sample"
        app:layout_constraintTop_toBottomOf="@+id/text_sample" />

</androidx.constraintlayout.widget.ConstraintLayout>