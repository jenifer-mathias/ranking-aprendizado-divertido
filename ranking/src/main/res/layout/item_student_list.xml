<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_ranking_detail"
        android:layout_width="62dp"
        android:layout_height="72dp"
        android:layout_margin="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/profile_img_student" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/first_name_student_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/img_ranking_detail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alana" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/last_name_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/first_name_student_item"
        app:layout_constraintTop_toTopOf="@+id/first_name_student_item"
        tools:text="Visconde" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/grade_number_student_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/img_ranking_detail"
        app:layout_constraintStart_toStartOf="@+id/first_name_student_item"
        app:layout_constraintTop_toBottomOf="@+id/first_name_student_item"
        tools:text="2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/grade_letter_student_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/grade_number_student_item"
        app:layout_constraintStart_toEndOf="@+id/grade_number_student_item"
        app:layout_constraintTop_toTopOf="@+id/grade_number_student_item"
        tools:text="A" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/score_number_student_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/grade_number_student_item"
        app:layout_constraintEnd_toStartOf="@+id/score_student_text"
        app:layout_constraintTop_toTopOf="@+id/grade_number_student_item"
        tools:text="550" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/score_student_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/score_student"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/grade_number_student_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grade_number_student_item"
        tools:text="pontos" />

    <View
        android:id="@+id/ranking_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ranking_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>