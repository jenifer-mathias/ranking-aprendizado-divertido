<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/design_default_color_primary</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:colorAccent" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Ranking" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/firstColorGradient</item>
    </style>

</resources>